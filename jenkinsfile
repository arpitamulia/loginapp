node {
    try {
        stage('Hello') {
            sh 'mvn --version'
        }
        stage('Checkout') {
            checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/arpitamulia/loginapp.git']])
        }
        stage('Maven Build') {
            sh 'mvn clean install'
        }
    } catch (Exception e) {
        echo "Build failed: ${e.getMessage()}"
        currentBuild.result = 'FAILURE'
        throw e
    }
    finally{
       cleanWs()
    }
}
