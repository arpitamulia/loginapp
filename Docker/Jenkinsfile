pipeline {
    agent any

    environment {
        REGISTRY_URL = '172.16.16.102:9001'
        REPOSITORY = 'docker-hosted'
        REGISTRY_USER = 'admin'
        REGISTRY_PASSWORD = 'admin'
    }



    stages {
        stage('Checkout Code') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[url: 'https://github.com/arpitamulia/loginapp.git']]
                )
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean install package'
            }
        }
        stage('Upload Arifact') {
            steps {
                nexusArtifactUploader artifacts: [[artifactId: 'AccountLogin', classifier: '', file: '/var/lib/jenkins/workspace/MSP/DEV/Build-Stone-Henge/target/AccountLogin.war', type: 'war']], credentialsId: '77874c59-4637-44ca-835c-8557fe48402b', groupId: 'com.login', nexusUrl: '172.16.16.101:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'msp_release', version: '${RELEASE_VERSION}'
            }
        }
    }
}
